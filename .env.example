# ConcreteFlow Environment Configuration

# Application
APP_NAME=ConcreteFlow
APP_VERSION=0.1.0
DEBUG=false

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/concreteflow
DATABASE_URL_SYNC=postgresql://postgres:postgres@db:5432/concreteflow

# Redis
REDIS_URL=redis://redis:6379/0

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# File Upload
MAX_UPLOAD_SIZE=52428800  # 50MB
